#include <MiniCom.h>
#include <DHT.h>

MiniCom com;
DHT dht11(12, DHT11); //DHT11객체 생성

void check(){
	float fh, fc, ff;

	//DHT 온습도 센서 읽기
	fh = dht11.readHumidity(); //습도 측정
	fc = dht11.readTemperature(); //섭씨 온도 측정
	ff = dht11.readTemperature(true); //화씨 온도 측정

	if (isnan(fh) || isnan(fc) || isnan(ff)){ //측정 실패시에는 출력 없이 리턴
		com.print(1, "Failed!!");
		return;
	}
	com.print(1, "t:", fc, " H:", fh);
}

void setup()
{
	com.init();
    com.setInterval(2000, check);
	dht11.begin();
	com.print(0, "[[DHT11]]");
	com.print(1, "Preparing DHT11");
}

void loop()
{
	com.run();
}
